@page
@using ProyectSerInfo.Dominio;
@model SerInfoFrontend.Frontend.Pages.Clientes.Create1Model
@{
}
<!--Espacio reservado para el título-->
<h1>NUEVO CLIENTE</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <!--Espacio reservado para hacer algo-->
    </div>
    <div class="col-md-auto">
        <form method="form-group">
            <div class="form-group">
                <label asp-for="cliente.Nombre"></label>
                <input asp-for="cliente.Nombre" placeholder="Ingrese Nombre">
            </div>

            <div class="form-group">
                <label asp-for="cliente.Apellido"></label>
                <input asp-for="cliente.Apellido" placeholder="Ingrese Apellido">
            </div>

            <div class="form-group">
                <label asp-for="cliente.Celular"></label>
                <input asp-for="cliente.Celular" placeholder="Ingrese Celular">
            </div>

            <div class="form-group">
                <label asp-for="cliente.Genero"></label>
                <select asp-for="cliente.Celular" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="cliente.Direccion"></label>
                <input asp-for="cliente.Direccion" placeholder="Ingrese Dirección">
            </div>

            <div class="form-group">
                <label asp-for="cliente.FechaIngreso"></label>
                <input asp-for="cliente.FechaIngreso" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-primary">Crear Cliente</button>
            <hr>
            <a class="btn btn-secondary" asp-page="./Index1">Volver</a>

        </form>
        
    </div>
    <div class="col col-lg-2">
      <!--Espacio reservado para hacer algo-->
    </div>
  </div>
</div>